{{ ansible_managed | comment }}
---
version: '{{ compose_version }}'
services:
  {{ service }}:
    image: portainer/portainer-ce:{{ version }}
    command: -H tcp://tasks.agent:9001 --tlsskipverify
    # ports:
      # - "9000:9000"
      # - "8000:8000"
    volumes:
      - {{ service }}_data:/data
    networks:
      - agent_network
      - {{ traefik_network }}
    deploy:
      mode: replicated
      replicas: 1
      {{ placement }}
      labels:
        {{ traefik_default_labels }}

  agent:
    image: {{ service }}/agent
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

networks:
  {{ traefik_network }}:
    external: true
  agent_network:
    driver: overlay
    attachable: true

volumes:
  {{ service }}_data:
