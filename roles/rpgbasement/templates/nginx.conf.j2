server {
    listen       80;
    server_name  host.{{ dns }};

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }
    location /podcast {
        root   /usr/share/nginx/html;
        autoindex on;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}