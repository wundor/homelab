---
{{ ansible_managed | comment }}
version: "{{ compose_version }}"
services:
  {{ service }}:
    image: lissy93/dashy:{{ version }}
    volumes:
      - {{ service_path }}/config.yml:/app/public/conf.yml
    healthcheck:
      test: ["CMD", "yarn", "health-check"]
      interval: 10s
    deploy:
      {{ placement }}
      labels:
        {{ traefik_default_labels }}
    networks:
      - {{ traefik_network }}

networks:
  {{ traefik_network }}:
    external: true
