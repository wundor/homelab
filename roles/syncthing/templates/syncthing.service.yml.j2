---
{{ ansible_managed | comment }}
version: '{{ compose_version }}'
services:
  {{ service }}:
    image: syncthing/syncthing:{{ version }}
    volumes:
      {{ remote_volume }}
        source: data
        target: /var/syncthing
    deploy:
      labels:
        {{ traefik_default_labels }}
        - 'traefik.http.routers.{{ service }}.middlewares=authelia@docker'
    ports:
      - target: 22000
        published: 22000
      - target: 22000
        published: 22000
        protocol: udp
      - target: 21027
        published: 21027
        protocol: udp
    networks:
      - {{ traefik_network }}

volumes:
  data:
    {{ nfs_volume }}
      device: ':/{{ zfs_pool }}/{{ zfs.app }}'

networks:
  {{ traefik_network }}:
    external: true
