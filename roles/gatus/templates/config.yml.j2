---
metrics: false # Whether to expose metrics at /metrics
alerting:
  discord:
    webhook-url: '{{ discord_webhook_url }}'

services:
  - name: Narnia
    url: 'http://na-router.{{ lan }}'
    group: lan
    alerts:
      - type: discord
        enabled: true
        description: 'Narnia is unavailable'
        send-on-resolved: true
    conditions:
      - '[STATUS] == 200'
      - '[RESPONSE_TIME] < 300'
  - name: DNS
    group: lan
    url: 'tcp://192.168.5.91:53'
    conditions:
      - "[CONNECTED] == true"
    {{ discord_alert }}
